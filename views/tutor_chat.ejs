<!-- views/tutor_chat.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Chat with <%= tutor.name %></title>
    <link rel="stylesheet" href="/css/tutor_chat.css">
</head>
<body>
    <div class="chat-container">
        <h2>Chat with <%= tutor.name %></h2>
        <div id="chat-box">
            <% chat.messages.forEach(message => { %>
                <div class="message <%= message.senderId.equals(session.userId) ? 'self' : 'other' %>">
                    <p><%= message.text %></p>
                    <span><%= new Date(message.timestamp).toLocaleTimeString() %></span>
                </div>
            <% }) %>
        </div>
        <form id="chat-form">
            <input type="text" id="message-input" placeholder="Type your message" required>
            <button type="submit">Send</button>
        </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>
</body>
</html>
